
<h1>ログイン</h1>

<%= form_with(url: login_path) do |form| %>
  <div>
    <%= form.label :email, 'メールアドレス', style: "display: block" %>
    <%= form.text_field :email, value: params[:email] %>
  </div>

  <div>
    <%= form.label :encrypted_password, 'パスワード', style: "display: block" %>
    <%= form.text_field :encrypted_password, value: params[:encrypted_password] %>
  </div>

  <div>
    <%= form.submit 'ログイン' %>
  </div>
<% end %>