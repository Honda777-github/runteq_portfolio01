<div class="row mb-3" id="comment-form">
  <div class="col-lg-8 offset-lg-2">
  <%= form_with(model: [ @shop, Comment.new ]) do |form| %>
    <div>
      <%= form.label :content, "コメント" %>
      <%= form.text_area :content, required: true %>
    </div>
    <div>
      <%= form.label :hot_rank, "辛さ評価" %>
      <%= form.number_field :hot_rank, min: 1, max: 5, required: true %>
    </div>
    <div>※辛さは1〜5の間で入力ができます</div>
    <div>
      <%= form.submit "投稿する" %>
    </div>
  <% end %>
  </div>
</div>

