<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Shops" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Shops</h1>
    <%= link_to "お店新規登録", new_shop_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="shops" class="min-w-full">
    <%= search_form_for @q, url: search_shops_path do |f| %>
      <%= f.search_field :name_cont %>
      <%= f.submit '検索'%>
    <% end %>
    <ul>
      <% @shops.each do |shop| %>
        <li><%= shop.name %></li>
      <% end %>
    </ul>
  </div>
</div>
