<div class="wrapper">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Shops" %>

  <div id="shops" class="contener">
    <div class="img_box">
      <%= image_tag "top_img1.png" %>
    </div>

    <%= search_form_for @q, class: "search-form-7", url: search_shops_path do |f| %>
      <%= f.search_field :name_cont %>
      <%= f.submit '検索' %>
    <% end %>
    <h1 class="font-bold text-4xl">お店一覧</h1>
    <div class="flex justify-between items-center">
    <%= link_to "お店の新規登録", new_shop_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
    <ul>
      <% @shops.each do |shop| %>
        <li><%= shop.name %> - <%= link_to "お店情報", shop, class:"shop_link" %></li>
      <% end %>
    </ul>
  </div>
</div>
